<form class="form-signin position-relative container" id="login-form">
    <div class="text-center mb-4">
        <h1 class="h3 mb-3 font-weight-normal">Kanban Login</h1>
        <input type="hidden" name="_csrf" value="<%= _csrf %>">
    </div>

    <div class="form-label-group">
        <input width="80%" type="text" id="inputUsername" name="username" class="form-control" placeholder="Phone Number" required autofocus>
        <label for="inputUsername">&nbsp;Phone Number</label>
    </div>

    <div class="form-label-group">
        <input type="password" width="80%" id="inputPassword" name="password" class="form-control" placeholder="Password" required>
        <label for="inputPassword"> &nbsp; Password</label>
    </div>

    <button class="btn btn-lg btn-primary btn-block" width="80%" type="submit">Sign in &nbsp; </button>
    <p class="mt-5 mb-3 text-center">Copyright </p>

    <div class="spinner-container" id="login-spinner" style="visibility:hidden">
        <div class="spinner-frame">
            <div class="spinner-cover"></div>
            <div class="spinner-bar"></div>
        </div>
    </div>
</form>
